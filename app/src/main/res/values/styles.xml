<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TEXT VIEW-->
    <style name="PrimaryTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ample_soft_bold</item>
    </style>

    <style name="StyleTextViewTitle" parent="PrimaryTextView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/ample_soft_bold</item>
        <item name="android:textSize">@dimen/size_title</item>
    </style>

    <style name="StyleTextViewSubtitle" parent="PrimaryTextView">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:fontFamily">@font/ample_soft</item>
        <item name="android:textSize">@dimen/size_subtitle</item>
    </style>


    <!-- BUTTON -->
    <style name="NormalButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/ample_soft_normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonLight" parent="NormalButton">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="ButtonDark" parent="NormalButton">
        <item name="android:textColor">@color/colorWhite100</item>
    </style>

    <!-- INPUT LAYOUT -->
    <style name="TextHintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/ample_soft_normal</item>
    </style>

</resources>
